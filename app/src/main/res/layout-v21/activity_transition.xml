<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.maxiaowu.societyapp.transition_demo.TransitionActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/blue"
        android:elevation="4dp"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Material.Title"
            android:textColor="@color/white"
            android:text="transitionDemo"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/transition_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:layout_marginTop="30dp"
        android:id="@+id/clipProgressbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:max="100"
        style="@style/CustomProgressBar"
        />

    <ImageView
        android:id="@+id/levelImage"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:background="@drawable/level_demo"/>

</LinearLayout>
