<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.maxiaowu.societyapp.transition_demo.SecondShareElementActivity">

    <ImageView
        android:id="@+id/ball_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/constant_color_ball"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/btn1"
        android:layout_marginTop="200dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|bottom"
        android:text="next(overlap transition = false)"

        />

    <Button
        android:id="@+id/btn2"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|bottom"
        android:text="next(overlap transition = true)"
        />
</LinearLayout>