<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maxiaowu.societyapp.transition_demo.RevealActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/blue"
        android:elevation="4dp"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Material.Title"
            android:textColor="@color/white"
            android:text="transitionDemo"/>

    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Activity demonstrating how to create different CirculaReveal animations"/>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:gravity="center_horizontal"
     android:layout_alignParentBottom="true">
    <ImageView
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:scaleY="0.5"
        android:scaleX="0.5"
        android:src="@drawable/circle_24dp"
        android:tint="@color/green"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:scaleY="0.5"
        android:scaleX="0.5"
        android:src="@drawable/circle_24dp"
        android:tint="@color/red"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:scaleY="0.5"
        android:scaleX="0.5"
        android:src="@drawable/circle_24dp"
        android:tint="@color/yellow"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:scaleY="0.5"
        android:scaleX="0.5"
        android:src="@drawable/circle_24dp"
        android:tint="@color/blue"
        android:layout_alignParentBottom="true"/>
 </LinearLayout>
</RelativeLayout>
