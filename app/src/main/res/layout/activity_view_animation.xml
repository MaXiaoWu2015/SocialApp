<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    tools:context="com.example.maxiaowu.societyapp.transition_demo.ViewAnimationActivity">

<TextView
    android:id="@+id/text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="hahahahhahahhahahaha"
    android:textSize="30dp"
    android:visibility="gone"/>

    <ImageView
        android:id="@+id/ball"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/constant_color_ball"
        />

    <Button
        android:id="@+id/changeBound"
        android:text="changeBound"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:onClick="changeBound" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@+id/changeBound"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="transitionToScenesActivity"
        />

</RelativeLayout>
