<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="InfiniteIndicatorLayout">
        <attr name="indicator_type">
            <enum name="circle_indicator" value="0" />
            <enum name="line_indicator" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CirclePageIndicator">
        <attr name="circle_count" format="integer"/>
        <attr name="circle_radius"  format="dimension"/>
        <attr name="circle_margin" format="dimension"/>
        <attr name="circle_color" format="color" />
        <attr name="circle_selected_color" format="color"/>
        <attr name="orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="circle_center"  format="boolean"/>
    </declare-styleable>
</resources>